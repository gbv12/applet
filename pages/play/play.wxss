/* pages/play/play.wxss */
.box {
  text-align: center;
}

.img {
  width: 300rpx;
  border-radius: 50%;


  animation: abc 5s linear infinite;
}

.img1 {

  width: 100rpx;
}

@keyframes abc {
  0% {
    transform: rotate(0deg);
  }

  100% {
    transform: rotate(360deg);
  }
}

.item {
  height: 70rpx;
  line-height: 70rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.line {
  width: 80%;
  height: 2rpx;
  background: rgb(192, 182, 182);
  margin-left: 70rpx;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
}
.container1 {
  position: relative;
  width: 100%;
  height: 100%;
  color: white;
}

.background {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;  
  height: 100%;
 
  background-size: cover;
  backdrop-filter: blur(5rpx);
  -webkit-backdrop-filter: blur(5rpx);
  background-color: rgba(255, 255, 255, 0.7);
}

.content {
  position: relative;
  z-index: 1;
  padding: 20px;
}
